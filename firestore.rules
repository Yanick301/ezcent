
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Products are publicly readable
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Only admin SDK should write products

      // Reviews are publicly readable, but only the owner can manage their own review
      match /reviews/{reviewId} {
        allow read: if true;
        allow create, update, delete: if isOwner(request.resource.data.userId);
      }
    }

    // User-specific data is protected. A user can only access their own data.
    match /userProfiles/{userId} {
      // Allow user to create, read, update, and delete their own profile
      allow create: if isOwner(userId);
      allow read, update, delete: if isOwner(userId);
      
      // A user has full read/write access to all subcollections under their own profile.
      // This includes orders, cartItems, etc. This is a simple and secure rule.
      match /{allDocuments=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // The cartItems collection is at the root, so it needs its own rule.
    // A user can only access their own cart items.
    match /cartItems/{cartItemId} {
        allow read, create, update, delete: if isOwner(resource.data.userId);
    }
  }
}
