
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Products are managed statically
    }

    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /userProfiles/{userId} {
      // Users can read and write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /userProfiles/{userId}/orders/{orderId} {
      // A user can read and create their own orders
      allow read, create: if request.auth != null && request.auth.uid == userId;
      // A user can update their own order status, and so can an admin
      allow update: if request.auth != null;
    }
  }
}
