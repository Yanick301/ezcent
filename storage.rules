
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures are readable by everyone, but only writable by the owner.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Order receipts can be written by any authenticated user into their own path,
    // and read by anyone with the link (for simplicity)
    match /receipts/{userId}/{orderId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
