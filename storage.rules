
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures are readable by everyone, but only writable by the owner.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // This path is deprecated as receipts are now stored in Firestore.
    match /receipts/{userId}/{orderId}/{fileName} {
      allow read, write: if false;
    }
  }
}
