
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Les images de profil sont accessibles en lecture par tous, mais seul le propriétaire peut les écrire.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Les reçus de commande ne peuvent être écrits que par l'utilisateur propriétaire de la commande.
    // La lecture est limitée à l'utilisateur ou potentiellement aux administrateurs (règle à affiner si nécessaire).
    match /receipts/{userId}/{orderId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
